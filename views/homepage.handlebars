{{#each posts as |post|}}
  <a href="/post/{{id}}">
    <div class="card text-center m-3">
      <div
        class="card-header d-flex justify-content-between align-items-center"
      >
        <h2>{{title}}</h2>
        <h3>Created by {{user.username}}</h3>
      </div>
      <div class="card-body">
        <p class="text-start">{{text}}</p>
      </div>
    </div>
  </a>
{{/each}}